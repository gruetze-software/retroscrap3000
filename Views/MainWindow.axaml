<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RetroScrap3000.ViewModels"
        x:Class="RetroScrap3000.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="{Binding AppTitle}"
        Background="{DynamicResource SystemRegionBrush}"
        TransparencyLevelHint="AcrylicBlur"
        Width="1000" Height="700" WindowStartupLocation="CenterScreen">

        <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style Selector="DataGridCell">
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MinHeight" Value="25"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, *">
        
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="10">
            
            <Grid ColumnDefinitions="*, Auto, Auto, Auto">
                <TextBox Grid.Column="0" 
                         Text="{Binding RomPath}" 
                         Watermark="Pfad zu den ROMs waehlen..." 
                         VerticalContentAlignment="Center">
                    <TextBox.InnerRightContent>
                        <Button Command="{Binding SelectFolderCommand}" Content="..." Padding="10,0" Background="Transparent" BorderThickness="0"/>
                    </TextBox.InnerRightContent>
                </TextBox>

                <Button Grid.Column="1" Command="{Binding ScanCommand}" Content="Scan ROMs" 
                        Background="{DynamicResource SystemAccentColor}" Foreground="White"
                        FontWeight="Bold" Padding="15,5" Margin="10,0,5,0"/>

                <Button Grid.Column="2" Click="OpenOptions_Click" Content="âš™" Padding="10,5"/>
                
                <Border Grid.Column="3" IsVisible="{Binding IsUpdateAvailable}" Background="Orange" 
                        CornerRadius="15" Padding="10,2" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Update!" FontSize="10" FontWeight="Bold" Foreground="Black"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="350, 5, *">
            
            <Grid Grid.Column="0" RowDefinitions="*, 5, 2*">
    
                <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundListLowBrush}" BorderThickness="0,0,1,1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                    <DockPanel Margin="5">
                        <TextBlock DockPanel.Dock="Top" Text="SYSTEME" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding Systems}" 
                                SelectedItem="{Binding SelectedSystem}" 
                                IsReadOnly="True" 
                                HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="" Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding SystemIcon}" Width="16" Height="16" Margin="5,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="System" Binding="{Binding SystemName}" Width="*" />
                                <DataGridTextColumn Header="ROMs" Binding="{Binding Roms.Count}" Width="50" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>

                <GridSplitter Grid.Row="1" Height="5" Background="Transparent" ResizeDirection="Rows"/>

                <Border Grid.Row="2" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
                    <DockPanel Margin="5">
                        <TextBlock DockPanel.Dock="Top" Text="GAMES" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedSystem.Roms}" 
                                SelectedItem="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectedGame}"
                                IsReadOnly="True"
                                GridLinesVisibility="All"
                                HorizontalGridLinesBrush="Gray"
                                VerticalGridLinesBrush="Gray">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                                <DataGridTextColumn Header="Year" Binding="{Binding ReleaseYear}" Width="50" />
                                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="80" />
                                <DataGridTextColumn Header="Ext" Binding="{Binding FileNameShort}" Width="40" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <Border Grid.Column="2" Background="{DynamicResource ThemeBackgroundBrush}" Padding="30">
                <Grid RowDefinitions="Auto, *">
                    
                    <Image Grid.Row="0" Source="{Binding SelectedSystem.SystemBanner}" Height="60" HorizontalAlignment="Right" VerticalAlignment="Top" Stretch="Uniform" Margin="0,0,0,20"/>

                    <Grid Grid.Row="1">
                        <TextBlock Text="Waehle ein Spiel aus, um Details anzuzeigen." 
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Opacity="0.5" FontStyle="Italic"
                                IsVisible="{Binding SelectedGame, Converter={x:Static ObjectConverters.IsNull}}"/>

                        <ContentControl Content="{Binding SelectedGame}" IsVisible="{Binding SelectedGame, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <ContentControl.ContentTemplate>
                                <DataTemplate x:DataType="vm:GameViewModel">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Spacing="20" Margin="10">
                                            <TextBox Text="{Binding Name, Mode=TwoWay}" FontSize="26" FontWeight="ExtraBold" BorderThickness="0" Background="Transparent" Padding="0"/>
                                            <Separator Background="{DynamicResource SystemControlForegroundBaseLowBrush}" Height="1"/>

                                            <Grid ColumnDefinitions="120, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto" Margin="0,5">
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Release:" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ReleaseDate, Mode=TwoWay}" Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Developer:" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Developer, Mode=TwoWay}" Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Genre:" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Genre, Mode=TwoWay}" Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Players:" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Players, Mode=TwoWay}" Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rating:" VerticalAlignment="Center" Opacity="0.5"/>
                                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                    
                                                    <TextBlock Text="{Binding RatingStars}" 
                                                            Foreground="Gold" 
                                                            FontSize="18" 
                                                            VerticalAlignment="Center"/>
                                                    
                                                    <TextBox Text="{Binding RatingValue, Mode=TwoWay}" 
                                                            Width="40" 
                                                            FontSize="12"
                                                            BorderThickness="0,0,0,1"
                                                            Background="Transparent"
                                                            VerticalAlignment="Center"/>
                                                            
                                                    <TextBlock Text="/ 10" Opacity="0.3" FontSize="10" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>

                                            <StackPanel Spacing="10">
                                                <TextBlock Text="DESCRIPTION" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}"/>
                                                <TextBox Text="{Binding Description, Mode=TwoWay}" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="150" Background="{DynamicResource SystemControlBackgroundChromeLowBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>